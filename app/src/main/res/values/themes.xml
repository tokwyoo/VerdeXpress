<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VerdeXpress" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item> <!-- Verde principal -->
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item> <!-- Blanco para el texto sobre verde -->

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorSecondary</item> <!-- Verde claro -->
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item> <!-- Variante de verde claro -->
        <item name="colorOnSecondary">@color/colorOnSecondary</item> <!-- Blanco para el texto sobre verde claro -->

        <!-- Color de fondo de la barra de estado -->
        <item name="android:statusBarColor">@color/white</item> <!-- Fondo blanco -->

        <!-- Habilitar íconos y texto oscuros -->
        <item name="android:windowLightStatusBar">true</item> <!-- Íconos y texto oscuros -->
    </style>
</resources>
